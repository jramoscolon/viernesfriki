<% if signed_in? %>
  <h4>Add and Review:</h4>
  <%= form_for([@episode, @episode.comments.build]) do |f| %>
    <div class="form-group">
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, :class => "form-control" %>
    </div>
    
    <p>
      <div class="rating"></div>
    </p>  
    <div class="actions">
      <%= f.submit :class => "btn btn-default" %>
    </div>
  <% end %>
<% end %>


