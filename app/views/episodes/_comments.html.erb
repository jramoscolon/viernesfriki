<div class="episode-reviews">
	<% @comments.each do |comment| %>
		<div class="row">
			<hr>
			<p><%= comment.user.first_name %><br><small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
			<div class="rated" data-score="<%= comment.rating %>"></div>
			<% if signed_in? && current_user.admin? %> 
				<%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, episode_comment_path(@episode, comment), method: :delete, data: { confirm: 'Are you sure?' } %> 
			<% end %>
			<p><%= comment.body %></p>
		</div><!-- Row -->
	<% end %>
</div><!-- episode-reviews -->

<%= will_paginate @comments %>